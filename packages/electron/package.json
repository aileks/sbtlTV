{
  "name": "@sbtltv/electron",
  "version": "0.1.0",
  "description": "Desktop IPTV player with GStreamer (Linux) and mpv (Windows/macOS)",
  "homepage": "https://github.com/thesubtleties/sbtlTV",
  "author": {
    "name": "thesubtleties",
    "email": "thesubtleties@users.noreply.github.com"
  },
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc && pnpm gst-helper:build && pnpm gst-helper:copy",
    "dev": "node scripts/dev-electron.cjs",
    "start": "electron .",
    "gst-helper:build": "node scripts/gst-helper-build.cjs",
    "gst-helper:copy": "node scripts/gst-helper-copy.cjs",
    "typecheck": "tsc --noEmit",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@sbtltv/core": "workspace:*",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "node-gyp": "^10.2.0",
    "typescript": "^5.3.0"
  }
}
